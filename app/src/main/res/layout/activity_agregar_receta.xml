<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarRecetaActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE033">

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:background="#FFE033"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_retorno"
            android:onClick="Retornar"/>

        <TextView
            android:layout_marginRight="65dp"
            android:background="#FFE033"
            android:fontFamily="@font/tt_norms_pro_bold"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar receta"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:text="Nombre del producto"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/nombre_receta"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:background="@drawable/bordes"
        android:layout_marginTop="10dp"
        android:padding="5sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="16sp"
        android:hint="Nombre completo del producto"
        android:imeOptions="actionNext"/>

    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:text="Ingredientes(máximo 5)"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ingrediente_receta"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:background="@drawable/bordes"
        android:layout_marginTop="10dp"
        android:padding="5sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="16sp"
        android:hint="Ingrediente 1, ingrediente 2..."
        android:imeOptions="actionNext"/>

    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:text="Preparación"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bordes"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:gravity="start"
        android:hint="Preparación del producto"
        android:padding="5sp"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/tt_norms_pro_bold"
        android:textColor="@color/black"
        android:backgroundTint="#FFE033"
        android:background="@drawable/bordes"
        android:text="Guardar Receta"
        android:onClick="Guardar_Datos"/>

</LinearLayout>