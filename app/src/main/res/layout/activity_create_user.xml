<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE033">

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:background="#FFE033"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_retorno"
            android:onClick="Retornar"/>

        <TextView
            android:layout_marginRight="65dp"
            android:background="#FFE033"
            android:fontFamily="@font/tt_norms_pro_bold"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear usuario"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:text="Nombre"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/lblnombre"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:background="@drawable/bordes"
        android:layout_marginTop="10dp"
        android:padding="5sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionNext"/>


    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:textSize="20dp"
        android:layout_marginTop="10sp"
        android:text="Correo"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/lblcorreo"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:background="@drawable/bordes"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="5sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionNext"/>

    <TextView
        android:textColor="#221D1D"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="ContraseÃ±a"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/lblpass"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:background="@drawable/bordes"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"/>

    <RadioGroup
        android:layout_marginTop="20dp"
        android:id="@+id/lblTipoUsuario"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/lblUserAd"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#221D1D"
            android:buttonTint="#941605"
            android:text="Administrador" />
        <RadioButton
            android:id="@+id/lblUserCo"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#221D1D"
            android:buttonTint="#941605"
            android:text="Consumidor" />

    </RadioGroup>

    <Button
        android:backgroundTint="#FFE033"
        android:fontFamily="@font/tt_norms_pro_bold"
        android:text="Crear usuario"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:onClick="InsertarUsuario"
        />

</LinearLayout>