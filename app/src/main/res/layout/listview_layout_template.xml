<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/button">

    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="30dp"
        android:elevation="0dp">
    <ImageView
        android:id="@+id/lblFotoRec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hamburguer" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/lblNomRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0D1013"
            android:textSize="20sp"
            android:text="nombre de la receta aqui"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lblicono"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:src="@drawable/burguer_feliz"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>