<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE033">

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:background="#FFE033"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_retorno"
            android:onClick="Retornar"/>

        <TextView
            android:background="#FFE033"
            android:fontFamily="@font/tt_norms_pro_bold"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recetas guardadas"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/advertencia2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/advertencia"
        android:visibility="gone"/>

    <ListView android:id="@+id/lstRecetasGuardadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>